<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"

        >

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/monImage"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:src="@color/dark_background" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/monTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/intersemibold"
                android:text="Neuralink: Elon Musk's brain chip firm says US approval won for human study - BBC"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/monAuthor"
                android:layout_gravity=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/intersemibold"
                android:text="Marlen Super"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/monDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/intermedium"
                android:text="CNBC's Jim Cramer said on Thursday it was too early for investors to get bullish on this market, even if lawmakers can cut a debt ceiling deal."
                android:textSize="14dp" />

            <TextView
                android:id="@+id/monSource"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/intersemibold"
                android:text="BBC"
                android:textSize="14dp" />

            <TextView
                android:textColor="@color/blank"
                android:id="@+id/monPublish"
                android:paddingRight="10dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/intermedium"
                android:text="2023-05-26T00:04:00Z"
                android:textSize="11dp" />



        </LinearLayout>





    </androidx.cardview.widget.CardView>


</LinearLayout>