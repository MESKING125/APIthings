<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/monImage"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@color/dark_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:paddingHorizontal="25dp"
        android:textColor="@color/black"
        android:id="@+id/monTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/intersemibold"
        android:text="Neuralink: Elon Musk's brain chip firm says US approval won for human study - BBC"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/monImage"
        />

    <TextView
        android:paddingHorizontal="25dp"
        android:id="@+id/monAuthor"
        android:layout_gravity=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/intersemibold"
        android:text="Marlen Super"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/monTitle"
        />

    <TextView
        android:paddingHorizontal="25dp"
        android:id="@+id/monDesc"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/intermedium"
        android:text="CNBC's Jim Cramer said on Thursday it was too early for investors to get bullish on this market, even if lawmakers can cut a debt ceiling deal."
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/monAuthor"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:paddingHorizontal="25dp"
        android:id="@+id/monSource"
        android:paddingRight="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/intersemibold"
        android:text="BBC"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/monDesc"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:textColor="@color/blank"
        android:id="@+id/monPublish"
        android:paddingRight="10dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/intermedium"
        android:text="2023-05-26T00:04:00Z"
        android:textSize="11dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monDesc"
        />


</androidx.constraintlayout.widget.ConstraintLayout>